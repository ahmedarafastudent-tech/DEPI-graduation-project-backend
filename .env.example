# Server Configuration
PORT=5000                           # API server port
NODE_ENV=development                # development | test | production
BACKEND_URL=http://localhost:5000   # Full URL to backend API
FRONTEND_URL=http://localhost:3000  # URL where frontend is hosted
CORS_ORIGINS=http://localhost:3000  # Comma-separated list of allowed origins

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/your_database          # Main database connection
MONGO_TEST_URI=mongodb://localhost:27017/your_test_db      # Test database (for npm test)
MONGO_MAX_POOL_SIZE=50                                     # Optional: Connection pool size
MONGO_MIN_POOL_SIZE=10                                     # Optional: Min connections

# Authentication
JWT_SECRET=your_jwt_secret_key_here    # CRITICAL: Change in production! (testsecret123 in tests)
JWT_EXPIRE=7d                          # Token expiry (e.g., 7d, 24h, 60m)
JWT_COOKIE_EXPIRE=7                    # Cookie expiry in days

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com             # SMTP server (e.g., smtp.gmail.com, smtp.mailtrap.io)
SMTP_PORT=587                          # Common ports: 587 (TLS), 465 (SSL)
SMTP_USER=your_email@example.com       # SMTP authentication username
SMTP_PASS=your_smtp_password          # SMTP authentication password
EMAIL_FROM=noreply@yourdomain.com     # From address for sent emails
EMAIL_FROM_NAME=Your Store Name        # From name for sent emails

# File Upload (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name  # Cloudinary cloud name
CLOUDINARY_API_KEY=your_api_key        # Cloudinary API key
CLOUDINARY_API_SECRET=your_api_secret  # Cloudinary API secret
MAX_FILE_SIZE=5000000                  # Max file upload size in bytes (5MB)

# Payment Gateway (PayTabs)
PAYTABS_PROFILE_ID=your_profile_id     # PayTabs merchant profile ID
PAYTABS_SERVER_KEY=your_server_key     # PayTabs server key
PAYTABS_REGION=EGY                     # Payment region code
PAYTABS_CURRENCY=EGP                   # Payment currency code

# Rate Limiting & Security
RATE_LIMIT_WINDOW=15                   # Time window in minutes
RATE_LIMIT_MAX=100                     # Max requests per window (general routes)
AUTH_RATE_LIMIT_MAX=50                 # Max requests per window (auth routes)

# Support & Contact
SUPPORT_EMAIL=support@example.com      # Customer support email
SUPPORT_URL=https://example.com/help   # Help/support page URL

